@model TochalTools.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "تغییر کلمه عبور";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Container-fluid starts -->
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-lg-6">
                <h3>
                    @ViewBag.Title
                    <small>تغییر کلمه عبور کاربر</small>
                </h3>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid Ends -->

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12 col-xl-12">
            <div class="row">
                <div class="col-sm-12">
                    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "theme-form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="card">
                            <div class="card-header">
                                <h5>مشخصات کلمه عبور</h5>
                                <span>اطلاعات کلمه عبور را در این قسمت وارد نمایید.</span>
                            </div>
                            <div class="card-body">
                                <div class="form-row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.OldPassword, new { @class = "col-form-label pt-0" })
                                            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                                            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control input-air-primary" })
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.NewPassword, new { @class = "col-form-label pt-0" })
                                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control input-air-primary" })
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-form-label pt-0" })
                                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-air-primary" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="btn-div">
                            <button type="submit" class="btn btn-success">تغییر</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

