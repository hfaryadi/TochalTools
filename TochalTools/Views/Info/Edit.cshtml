                                                @Html.EditorFor(m => m.SecondMobile, new { htmlAttributes = new { @class = "form-control input-air-primary" } })
                                                <div class="input-group-append">
                                                    <span class="input-group-text"><i class="icofont icofont-ui-cell-phone"></i></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Fax, new { @class = "col-form-label pt-0" })
                                            @Html.ValidationMessageFor(m => m.Fax, "", new { @class = "text-danger" })
                                            <div class="input-group">
                                                @Html.EditorFor(m => m.Fax, new { htmlAttributes = new { @class = "form-control input-air-primary" } })
                                                <div class="input-group-append">
                                                    <span class="input-group-text"><i class="icofont icofont-fax"></i></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Email, new { @class = "col-form-label pt-0" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                            <div class="input-group">
                                                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control input-air-primary" } })
