                                                    <span class="input-group-text"><i class="icofont icofont-web"></i></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header">
                                <h5>اطلاعات آدرس</h5>
                                <span>اطلاعات آدرس وب سایت را در این قسمت وارد نمایید.</span>
                            </div>
                            <div class="card-body">
                                <div class="form-row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.CountryId, new { @class = "col-form-label pt-0" })
                                            @Html.ValidationMessageFor(m => m.CountryId, "", new { @class = "text-danger" })
                                            @Html.DropDownListFor(m => m.CountryId, Model.CountriesList, "انتخاب کنید", new { @class = "form-control input-air-primary", @onchange = "getStates('CountryId', 'StateId', 'CityId')" })
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.StateId, new { @class = "col-form-label pt-0" })
                                            @Html.ValidationMessageFor(m => m.StateId, "", new { @class = "text-danger" })
                                            @Html.DropDownListFor(m => m.StateId, Model.StatesList, "انتخاب کنید", new { @class = "form-control input-air-primary", @onchange = "getCities('StateId', 'CityId')" })
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.CityId, new { @class = "col-form-label pt-0" })
                                            @Html.ValidationMessageFor(m => m.CityId, "", new { @class = "text-danger" })
                                            @Html.DropDownListFor(m => m.CityId, Model.CitiesList, "انتخاب کنید", new { @class = "form-control input-air-primary" })
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.PostalCode, new { @class = "col-form-label pt-0" })
                                            @Html.ValidationMessageFor(m => m.PostalCode, "", new { @class = "text-danger" })
                                            @Html.EditorFor(m => m.PostalCode, new { htmlAttributes = new { @class = "form-control input-air-primary" } })
                                        </div>
                                    </div>
                                    <div class="col-md-12">
