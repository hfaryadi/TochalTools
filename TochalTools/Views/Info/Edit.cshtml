                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Twitter, new { @class = "col-form-label pt-0" })
                                            @Html.ValidationMessageFor(m => m.Twitter, "", new { @class = "text-danger" })
                                            <div class="input-group">
