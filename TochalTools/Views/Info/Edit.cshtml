                                            @Html.LabelFor(m => m.Description, new { @class = "col-form-label pt-0" })
                                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control input-air-primary", @rows = "4" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header">
                                <h5>اطلاعات تماس</h5>
                                <span>اطلاعات تماس وب سایت را در این قسمت وارد نمایید</span>
                            </div>
                            <div class="card-body">
                                <div class="form-row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.FirstTell, new { @class = "col-form-label pt-0" })
                                            @Html.ValidationMessageFor(m => m.FirstTell, "", new { @class = "text-danger" })
