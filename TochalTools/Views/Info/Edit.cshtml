                                            @Html.LabelFor(m => m.CompanyName, new { @class = "col-form-label pt-0" })
                                            @Html.ValidationMessageFor(m => m.CompanyName, "", new { @class = "text-danger" })
                                            @Html.EditorFor(m => m.CompanyName, new { htmlAttributes = new { @class = "form-control input-air-primary" } })
                                        </div>
                                    </div>
