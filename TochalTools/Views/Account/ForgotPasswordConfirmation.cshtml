@{
    Layout = null;
    var message = "";
    if (ViewBag.Id != null && ViewBag.Id != "")
    {
        string id = ViewBag.Id;
        switch (id)
        {
            case "true":
                message = "کلمه عبور به شماره موبایل شما ارسال شد.";
                break;
            case "false":
                message = "متاسفانه کلمه عبور ارسال نشد. دوباره امتحان نمایید.";
                break;
            case "novalid":
                message = "مقدار وارد شده صحیح نمی باشد.";
                break;
            case "nouser":
                message = "کاربری با مشخصات وارد شده موجود نمی باشد.";
                break;
            case "nocode":
                message = "کد وارد شده نادرست می باشد.";
                break;

        }
    }
}
