@model RegisterCustomeViewModel
@{
    ViewBag.Title = "ثبت نام";
    Layout = "/Views/Shared/_LoginRegister.cshtml";
}
<!--page-wrapper Start-->
<div class="page-wrapper">
    <div class="auth-bg">
        <div class="authentication-box">
            <h3 class="text-center">ثبت نام</h3>
            <h6 class="text-center">شماره موبایل و کلمه عبور خود را وارد نمایید.</h6>
            <div class="card mt-4 p-4">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "theme-form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(m => m.Mobile, new { @class = "col-form-label" })
                        @Html.ValidationMessageFor(m => m.Mobile, "", new { @class = "text-danger" })
                        @Html.EditorFor(m => m.Mobile, new { htmlAttributes = new { @class = "form-control input-air-primary" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-form-label" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control input-air-primary" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-form-label" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        @Html.EditorFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "form-control input-air-primary" } })
                    </div>
                    <div class="form-row form-row mt-3">
                        <div class="col-sm-4">
                            <button type="submit" class="btn btn-primary">ثبت نام</button>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-sm-12">
                            <div class="text-right mt-3">
                                آیا قبلا ثبت نام کرده اید؟&nbsp;&nbsp;<a href="/Account/Login">ورود</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="auth-bg-effect">
        <div class="first-effect"></div>
        <div class="second-effect"></div>
        <div class="third-effect"></div>
        <div class="fourth-effect"></div>
    </div>

</div>
<!--page-wrapper Ends-->